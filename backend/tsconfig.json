{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ESNext"],
    "strict": true,
    "outDir": "./build",
    "target": "ESNext",
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "exclude": ["node_modules"]
}
